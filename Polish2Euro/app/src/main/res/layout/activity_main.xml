<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.github.polish2euro.app.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/polishCurrency"
        android:layout_alignParentTop="true"
        android:layout_marginTop="173dp"
        android:hint="Enter here"
        android:editable="true"
        android:textSize="40dp"
        android:textIsSelectable="true"
        android:layout_centerInParent="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/convert"
        android:layout_below="@+id/polishCurrency"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="40dp"
        android:layout_alignRight="@+id/polishCurrency"
        android:layout_alignEnd="@+id/polishCurrency"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/result"
        android:layout_below="@+id/convert"
        android:textSize="40dp"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PLN"
        android:id="@+id/textView"
        android:textSize="40dp"
        android:layout_above="@+id/convert"
        android:layout_gravity="right"
        android:layout_alignRight="@+id/polishCurrency"
        android:layout_alignEnd="@+id/polishCurrency"
        android:width="100dp"
        android:textAlignment="textEnd"
        android:paddingEnd="0dp"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="EUR"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/result"
        android:layout_alignRight="@+id/result"
        android:layout_alignEnd="@+id/result"
        android:textSize="40dp"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_centerInParent="true" />


</RelativeLayout>
